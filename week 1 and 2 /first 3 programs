// Online C++ compiler to run C++ program online
// my first program of the DSA journey 
#include <iostream>
using namespace std ;
// voting eligibility 
int main() {
    
    int age ;
    cout << "enter the age : ";
    cin >> age ;
    if (age>=18){
        cout << " the person is eligible for voting ";
    }
    else {
        cout << " the person is not eligible for voting ";
    }
    return 0;
}

//(default input)
// greater number in three numbers 
#include <iostream>
using namespace std;

int main() {
     int a = 15 ;
     int b = 50 ;
     int c = 32 ;
     if (a>b && a>c){
         cout << " a is greater number ";
     }
     else if (b>a && b>c){
         cout << " b is greater number ";
     }
     else {
         cout << " c is greater number ";
     }
    return 0;
}

//(user input)

// Online C++ compiler to run C++ program online
// greater number in three numbers 
#include <iostream>
using namespace std;

int main() {
     int a,b,c;
     cout << " enter value for a ";
     cin >> a;
     cout << " enter value for b ";
     cin >> b;
     cout << " enter value for c ";
     cin >> c;
     
     if (a>b && a>c){
         cout << " a is greater number ";
     }
     else if (b>a && b>c){
         cout << " b is greater number ";
     }
     else {
         cout << " c is greater number ";
     }
    return 0;
}


// to find positive negative and even odd 

#include <iostream>
using namespace std ;

int main() {
    int a ;
    cin >> a;
    if (a>=0){
        if(a%2 == 0){
            cout << " number is positive and even ";
        }else {
            cout << " number is positive and odd ";
        }
    }
    else {
        cout << " number is negative ";
    }
    return 0;
}
