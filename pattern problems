// pattern 1 to 14


#include <iostream>
using namespace std ;

void pattern1(int a){
    for(int i=0;i<a;i++){
        for(int j=0;j<a;j++){
            cout <<"*";
        }
        cout << endl ;
    }
}

void pattern2(int a){
    for(int i=1;i<=a;i++){
        for(int j=1;j<=i;j++){
            cout << j ;
        }
        cout << endl;
        
    }
}

void pattern3(int a){
    for(int i=1;i<=a;i++){
        for(int j=1;j<=a;j++){
            cout << j ;
        }
        cout << endl ;
    }
}

void pattern4(int a){
     for(int i=1;i<=a;i++){
        for(int j=1;j<=i;j++){
            cout << "*" ;
        }
        cout << " ";
    }
}

void pattern5(int a){
     for(int i=1;i<=a;i++){
        for(int j=1;j<=a-i+1;j++){
            cout << j ;
        }
        cout << endl ;
    }
}

void pattern6(int a){
    for(int i=1;i<=a;i++){
        for(int j=a;j>=i;j--){
            cout << "*" ;
        }
        cout << endl;
        cout << endl;
    }
}

void pattern7(int a){
    for(int i=1;i<=a;i++){
        for(int j=a;j>=i;j--){
            cout << j ;
        }
        cout << endl;
        cout << endl;
    }
}

void pattern8(int a){
    for(int i=1;i<=a;i++){
        for(int j=1;j<=i;j++){
            cout << "*" ;
        }
        cout << endl;
        cout << endl;
    }
}

void pattern9(int a){
    for(int i=1;i<=a;i++){
        for(int j=1;j<=i;j++){
            cout << "*" ;
        }
        cout << endl;
    }
    for(int i=1;i<=a;i++){
        for(int j=a-1;j>=i;j--){
            cout << "*" ;
        }
        cout << endl;
    }
}

void pattern10(int a){
    for(int i=1;i<=a;i++){
        for(int j=1;j<=a-i;j++){
            cout << "  ";
        }
        for(int j=1;j<=2*i-1;j++){
            cout << "* ";
        }
        cout <<""<<endl;
    }
} 

void pattern11(int a){
    for(int i=1;i<=a;i++){
        for(int j=1;j<=i-1;j++){
            cout << "  ";
        }
        for(int j=1;j<=(2*a)-(2*i-1);j++){
            cout << "* ";
        }
         cout <<""<<endl;
    }
}

void pattern12(int a){
     for(int i=1;i<=a-1;i++){
        for(int j=1;j<=a-i;j++){
            cout << "  ";
        }
        for(int j=1;j<=2*i-1;j++){
            cout << "* ";
        }
        cout <<""<<endl;
    }
     for(int i=1;i<=a;i++){
        for(int j=1;j<=i-1;j++){
            cout << "  ";
        }
        for(int j=1;j<=(2*a)-(2*i-1);j++){
            cout << "* ";
        }
         cout <<""<<endl;
    }
}

void pattern14(int a){
    for(int i=1;i<=a;i++){
        for(int j=1;j<=i;j++){
            cout << i ;
        }
        cout << endl;
        cout << endl;
    }
}
int main() {
    int n ;
    cout << " enter the number for n : ";
    cin >> n ;
    pattern1(n);
    cout << endl;
    pattern2(n);
    cout << endl;
    pattern3(n);
    cout << endl;
    pattern4(n);
    cout << endl;
    cout << endl;
    pattern5(n);
    cout << endl;
    pattern6(n);
    cout << endl;
    pattern7(n);
    cout << endl;
    pattern8(n);
    cout << endl;
    pattern9(n);
    cout << endl;
    pattern10(n);
    cout << endl;
    pattern11(n);
    cout << endl;
    pattern12(n);
    cout << endl;
    pattern14(n);
    cout << endl;
    return 0;
}

