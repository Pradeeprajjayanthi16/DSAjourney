// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std ;

int sumofdigits(int n){
    
    if(n%10==n){
        return n%10 ;
    }
    else if (n%10>=0){
        return n%10+sumofdigits(n/10);
    }
    return 0 ;
}

int main() {
    cout << sumofdigits(2234);

    return 0;
}
