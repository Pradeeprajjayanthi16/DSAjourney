// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std ;

int recarray(int arr[],int n,int i){
    if(i>=n){
        return 0;
    }
    return arr[i]+recarray(arr,n,i+1);
}

int main() {
    int arr[] = {1,2,3,4,5};
    int i=0;
    cout << recarray(arr,5,i);
    return 0;
}
